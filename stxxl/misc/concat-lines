# Concatenate the lines of file $ARGV[0] which both satisfy regular expression $ARGV[1]

$regex = $ARGV[0];
shift;
$former = '';
while($line = <>)
{
  if(!($line =~ /$regex/) || !($former =~ /$regex/))
  {
    print("\n");
  }
  else
  {
    print("\t");
  }
  chomp($line);
  print($line);
  $former = $line;
}
print("\n");
